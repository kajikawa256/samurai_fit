<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postSettingTitle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Autopost_title"
        android:layout_width="423dp"
        android:layout_height="80dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:text="自動投稿　設定"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/postPermission"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/postPermission"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="自動投稿を許可する"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/createNickname"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/createNickname"
        app:layout_constraintTop_toBottomOf="@+id/Autopost_title" />

    <Button
        android:id="@+id/createNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ニックネームを作成する"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postPermission" />

</androidx.constraintlayout.widget.ConstraintLayout>
